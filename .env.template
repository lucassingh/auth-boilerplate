# ============================================
# FASTAPI AUTH BOILERPLATE - CONFIGURATION
# ============================================

# --------------------
# API CONFIGURATION
# --------------------
PROJECT_NAME=Auth Boilerplate
VERSION=1.0.0
DESCRIPTION=A robust API with JWT authentication
API_V1_STR=/api/v1

# --------------------
# SECURITY & JWT
# --------------------
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --------------------
# DATABASE
# --------------------
# Format: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/auth_boilerplate

# --------------------
# EMAIL CONFIGURATION (OPTIONAL)
# --------------------
# For production (Gmail/SendGrid/etc)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=Auth Boilerplate

# For development with MailHog (intercepts emails)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASSWORD=

# --------------------
# CORS (Allowed Origins)
# --------------------
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]

# --------------------
# ENVIRONMENT
# --------------------
ENVIRONMENT=development
DEBUG=True

# --------------------
# CONFIGURABLE REGISTRATION FIELDS
# --------------------
# Configure which fields are required/optional for user registration
USER_FIELDS_REQUIRED=email,password,first_name,last_name
USER_FIELDS_OPTIONAL=phone,country,city,address,date_of_birth